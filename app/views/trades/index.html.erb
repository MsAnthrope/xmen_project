<p id="notice"><%= notice %></p>
<div>
<h2 class="sub-header">Trade Library</h2>
  <div class="table-responsive">
    <table id="customers" class="table table-striped">
      <tr>
        <th>Author</th>
        <th>Publication date</th>
        <th>Story line</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      <% @trades.each do |trade| %>
        <tr>
          <td><%= trade.author %></td>
          <td><%= trade.publication_date %></td>
          <td><%= trade.series_title %></td>
          <td><%= trade.status %></td>
          <td><%= link_to 'Show', trade %></td>
          <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
          <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "New Trade", new_trade_path(color: "blue"), class: "btn btn-primary" %>
  </div>
</div>
